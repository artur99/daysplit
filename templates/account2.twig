<!DOCTYPE html>
<html lang="ro">
<head>
    {% include 'part/head.twig' %}
    <title>{{app['conf.title']}}{{title is defined?' | '~title:''}}</title>
    {% if meta is defined %}{% for key,itm in meta %}
    <meta name="{{key}}" content="{{itm}}">
    {% endfor %}{% endif %}
</head>
<body id="login">
    <div class="body row blue">
        <div class="loginbox nr2 center-align">
            <img src="{{asset('img/logo_3.png')}}" alt="" class="rellogo">
            <p class="flow-text col s10 offset-s1">
                Bun venit, {% if user.name %}{{user.name}}{% else %}{{user.email}}{% endif %}!
            </p>
            <div class="clearfix"></div>
            {%if relogin is defined and relogin %}
                <a href="#" id="btn-relogin" class="btn waves-effect col l5 ma waves-dark btn-large white">Accesare cont</a> <br>
            {%else%}
                <a href="{{l('/dashboard')}}" class="btn waves-effect col l5 ma waves-dark btn-large white">Accesare cont</a> <br>
            {%endif%}
            <a href="#" id="btn-logout" class="btn waves-effect col l5 ma waves-dark btn-large red lighten-1">Deconectare</a><br>
        </div>
    </div>
    {% include 'part/scripts.twig' %}
</body>
</html>
